:host
  position: fixed
  width: 100%
  height: 100%
  display: grid
  grid-auto-rows: min-content
  grid-template-rows: min-content auto
  grid-gap: 1em
  align-items: center
  position: relative
  background: #210741
  box-sizing: border-box
  padding: 1em 1em 0 1em
  background-image: url('bg_grid_static.png')
  background-repeat: no-repeat
  background-size: cover
  --bar-block-0: #8f1861
  --bar-block-1: #a12973
  --bar-block-2: #ad326d
  --bar-block-3: #b9456a
  --bar-block-4: #c65e67
  --bar-block-5: #c97962
  --bar-block-6: #c49365
  --bar-block-7: #bdad67

@keyframes pulse
  0%
    box-shadow: 0 0 0 0 var(--pulse-color)

.sun
  width: 100%
  height: 100%
  position: absolute
  background: url(bg_sun_static.png)
  background-repeat: no-repeat
  background-position: center top
  z-index: 1

.ssky
  width: 100%
  height: 100%
  position: absolute
  z-index: 1
  display: flex
  align-items: center
  justify-content: center
  z-index: 3
  .image
    position: absolute
    transition: filter .15s ease-in-out
    background-repeat: no-repeat
    width: 100%
    height: 100%
    background-position: center center
    &.static
      background-image: url('ssky_static.png')
    &.animated
      background-image: url('ssky_animated.gif')

.buttons
  display: grid
  grid-auto-flow: column
  grid-gap: 1em
  z-index: 4
  i
    font-family: 'Material Icons'
    font-style: normal

button.play
  display: flex
  align-items: center
  justify-content: center
  padding: .25em
  min-width: 50px
  max-width: 50px
  font-size: 1.5em
  border: none
  border-radius: 2px
  cursor: pointer
  box-shadow: 0px 1px 4px rgba(0, 0, 0, .5)
  &.clicked
    animation: pulse 1s
    box-shadow: 0 0 0 1em rgba(255, 255, 255, 0)
  &:focus
    outline: none

:host:not([state='paused'])
  i.play
    display: none

:host([state='playing'])
  button.play
    background: var(--playing-bg)
    color: var(--playing-color)
    --pulse-color: var(--playing-bg)
  button.play > i.play
    display: none
  .ssky
    .image.static
      opacity: 0
    .image.animated
      filter: drop-shadow(0px 0px 30px rgba(213, 56, 156, .5))

:host([state="unstarted"])
  button.play
    background: var(--unstarted-bg)
    color: var(--unstarted-color)
    --pulse-color: var(--unstarted-bg)
  i.pause
    display: none

:host([state='paused'])
  button.play
    background: var(--paused-bg)
    color: var(--paused-color)
    --pulse-color: var(--paused-bg)
  i.pause
    display: none

:host([state="unstarted"]),
:host([state="paused"])
  .ssky img.animated
    display: none
  .ssky img.static
    display: block
  .bars .bar span
    opacity: 0 !important

.bars
  display: grid
  grid-auto-flow: column
  grid-gap: 1em
  align-items: end
  height: 100%
  padding: 1em 0 0
  box-sizing: border-box
  z-index: 2
  .bar
    display: flex
    flex-direction: column-reverse
    align-items: center
    span
      width: 64px
      height: 40px
      opacity: 0
      transition: opacity .1s ease
      &:not(:first-child)
        margin-bottom: 1em
      &[index='0']
        background: var(--bar-block-0)
      &[index='1']
        background: var(--bar-block-1)
      &[index='2']
        background: var(--bar-block-2)
      &[index='3']
        background: var(--bar-block-3)
      &[index='4']
        background: var(--bar-block-4)
      &[index='5']
        background: var(--bar-block-5)
      &[index='6']
        background: var(--bar-block-6)
      &[index='7']
        background: var(--bar-block-7)

.creds
  position: absolute
  bottom: 0
  right: 0
  box-sizing: border-box
  padding .5em 27px 19px
  cursor: pointer
  z-index: 5
  a
    display: grid
    grid-auto-flow: column
    grid-gap: .25em
  a,
  a:visited
    font-family: 'Comfortaa'
    font-size: .7em
    text-decoration: none
    span
      transition: all .5s ease
      color: rgba(182, 197, 222, .75)
  &:hover
    span:first-of-type
      opacity: .75
    span:last-of-type
      color: rgba(7, 187, 242, 1)

@media (max-width: 640px)
  .bars .bar span
    width: 28px
    height: 17px
  .creds
    padding: .25em
    a
      font-size: .7em
  .ssky .image
    background-size: 65%
  .sun
    background-size: auto 45%
