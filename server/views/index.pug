doctype html
html(lang='en')
  head
    if config.production
      script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-159943899-1')
      script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-159943899-1');

    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no, minimal-ui')
    meta(name='mobile-web-app-capable', content='yes')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title= config.title
    style.
      @import url('https://fonts.googleapis.com/css?family=Comfortaa|Oxanium|Russo+One&display=swap');
      @font-face {
        font-family: 'Material Icons';
        src: url('https://fonts.gstatic.com/s/materialicons/v50/flUhRq6tzZclQEJ-Vdg-IuiaDsNc.woff2') format('woff2');
      }
      html {
        margin: 0;
        padding: 0;
        font-family: 'Russo One', sans-serif;
        --playing-bg: #c49365;
        --playing-color: #fff;
        --paused-bg: #b9456a;
        --paused-color: #fff;
        --ended-bg: #230e2a;
        --ended-color: #fff;
        --unstarted-bg: #8f1861;
        --unstarted-color: #fff;
      }
      html, body {
        height: 100%;
      }
      body {
        background: #000;
        color: #fff;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
      }
      main {
        display: flex;
        flex-direction: column;
        position: fixed;
        width: 100%;
        height: 100%;
      }
  body
    main
      ss-frequencies(
        state='unstarted',
        url='wraith_of_red_hill.mp3',
      )
    script(src='application.js')
